<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:background="@android:color/darker_gray">
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/daily_cover_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitXY"/>
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/daily_cover_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dimen_42px"
        android:layout_marginLeft="@dimen/dimen_60px"
        android:scaleType="fitXY"
        android:src="@drawable/close"/>
    <android.support.v7.widget.CardView
        android:id="@+id/daily_cover_content_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/dimen_60px"
        android:layout_marginRight="@dimen/dimen_60px"
        android:layout_marginTop="@dimen/dimen_240px"
        android:layout_marginBottom="@dimen/dimen_180px"
        app:cardCornerRadius="@dimen/dimen_18px"
        app:cardElevation="@dimen/dimen_12px">
        <android.support.constraint.ConstraintLayout
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/daily_cover_image"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_930px"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:scaleType="fitXY"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/daily_cover_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/daily_cover_image"
                android:layout_marginLeft="@dimen/dimen_42px"
                android:layout_marginBottom="@dimen/dimen_72px"
                android:includeFontPadding="false"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dimen_font_90px"
                android:textStyle="bold"
                tools:textColor="@android:color/holo_red_dark"
                tools:text="13"/>
            <View
                android:id="@+id/daily_cover_split"
                android:layout_width="@dimen/dimen_6px"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/daily_cover_day"
                app:layout_constraintBottom_toBottomOf="@id/daily_cover_day"
                app:layout_constraintLeft_toRightOf="@id/daily_cover_day"
                android:layout_marginLeft="@dimen/dimen_24px"
                android:layout_marginTop="@dimen/dimen_18px"
                android:layout_marginBottom="@dimen/dimen_18px"
                android:background="@android:color/white"
                tools:background="@android:color/holo_red_dark" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/daily_cover_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/daily_cover_day"
                app:layout_constraintLeft_toRightOf="@id/daily_cover_split"
                android:layout_marginLeft="@dimen/dimen_24px"
                android:layout_marginTop="@dimen/dimen_18px"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dimen_font_24px"
                android:textStyle="bold"
                tools:textColor="@android:color/holo_red_dark"
                tools:text="Jan"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/daily_cover_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/daily_cover_month"
                app:layout_constraintLeft_toRightOf="@id/daily_cover_split"
                android:layout_marginLeft="@dimen/dimen_24px"
                android:layout_marginTop="@dimen/dimen_3px"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dimen_font_24px"
                android:textStyle="bold"
                tools:textColor="@android:color/holo_red_dark"
                tools:text="Sunday"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/daily_cover_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/daily_cover_image"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="@dimen/dimen_42px"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/dimen_font_42px"
                tools:text="苦战"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/daily_cover_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/daily_cover_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="@dimen/dimen_42px"
                android:layout_marginLeft="@dimen/dimen_42px"
                android:layout_marginRight="@dimen/dimen_42px"
                android:gravity="left"
                android:textColor="@android:color/black"
                android:textSize="@dimen/dimen_font_36px"
                tools:text="善良一点，因为每个人都在与人生苦战。——《奇迹男孩》"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>



</android.support.constraint.ConstraintLayout>