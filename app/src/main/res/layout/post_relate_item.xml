<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dimen_48px">
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/post_list_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="16:10"
        android:foreground="#34000000"
        android:scaleType="fitXY"/>
    <android.support.constraint.Guideline
        android:id="@+id/post_list_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/dimen_24px" />
    <android.support.constraint.Guideline
        android:id="@+id/post_list_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/dimen_24px" />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/post_list_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/post_list_start"
        app:layout_constraintRight_toRightOf="@id/post_list_end"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dimen_24px"
        android:gravity="center_vertical|left"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dimen_font_33px"
        android:textStyle="bold"
        tools:text="这可能是世界上最恐怖的电影院"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/post_list_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/post_list_start"
        app:layout_constraintRight_toRightOf="@id/post_list_image"
        app:layout_constraintBottom_toTopOf="@id/post_list_title"
        android:layout_marginBottom="@dimen/dimen_18px"
        android:gravity="center_vertical|left"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dimen_font_30px"
        tools:text="实验  /  2'30 "/>

</android.support.constraint.ConstraintLayout>