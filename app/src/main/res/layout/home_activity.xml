<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">
    <RelativeLayout
        android:id="@+id/home_tab_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_144px">
        <FrameLayout
            android:id="@+id/home_daily_cover_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dimen_30px">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/dimen_72px"
                android:layout_height="@dimen/dimen_72px"
                android:scaleType="centerCrop"
                android:src="@drawable/daily_cover"/>
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/home_daily_cover_unread"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@drawable/daily_cover_unread"
                android:visibility="gone"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/home_daily_cover_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_18px"
                android:layout_marginTop="@dimen/dimen_18px"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dimen_font_30px"
                tools:text="29"/>
        </FrameLayout>
        <android.support.design.widget.TabLayout
            android:id="@+id/home_header_tab_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:tabSelectedTextColor="@android:color/white"
            app:tabTextColor="#B8B8B8"
            app:tabIndicatorColor="@android:color/white"
            app:tabIndicatorHeight="1dp">
        </android.support.design.widget.TabLayout>
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/home_search"
            android:layout_width="@dimen/dimen_72px"
            android:layout_height="@dimen/dimen_72px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_42px"
            android:scaleType="fitXY"
            android:src="@drawable/home_search"/>
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/home_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/home_tab_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>